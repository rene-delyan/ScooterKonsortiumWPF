<Application x:Class="ScooterKonsortium.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ScooterKonsortium"
             xmlns:vm="clr-namespace:ScooterKonsortiumWPF.ViewModel"
             xmlns:view="clr-namespace:ScooterKonsortiumWPF.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
            <view:MainMenuView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SetupViewModel}">
            <view:SetupView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OperativeViewModel}">
            <view:OperativeView />
        </DataTemplate>
    </Application.Resources>
</Application>
